{
  "$schema": "http://json-schema.org/schema",
  "$id": "devc-ng-add",
  "title": "devcontainer ng-add schematic",
  "description": "Adds .devcontainer configuration to your project",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "packageManager": {
      "description": "The package manager to use for your project.",
      "type": "string",
      "default": "npm",
      "enum": ["npm", "yarn", "pnpm"],
      "alias": "p",
      "x-prompt": {
        "message": "Which package manager would you like to use?",
        "type": "list",
        "items": [
          { "value": "npm", "label": "NPM" },
          {
            "value": "yarn",
            "label": "Yarn [ https://yarnpkg.com ]"
          },
          {
            "value": "pnpm",
            "label": "PNPM [ https://pnpm.io ]"
          }
        ]
      }
    }
  },
  "required": [
    "packageManager"
  ]
}