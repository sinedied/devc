{
  "name": "devc",
  "version": "0.1.0",
  "description": "Quickly add .devcontainer configuration to any JavaScript project, and more!",
  "bin": {
    "devc": "./bin/devc.js"
  },
  "main": "./lib/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "xo",
    "clean": "npx rimraf lib",
    "release:check": "semantic-release --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/devc.git"
  },
  "homepage": "https://github.com/sinedied/devc",
  "bugs": {
    "url": "https://github.com/sinedied/devc/issues"
  },
  "keywords": [
    "devcontainers",
    "dev",
    "containers",
    "generator",
    "vscode",
    "schematics",
    "angular",
    "react",
    "vue",
    "svelte",
    "node"
  ],
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "license": "MIT",
  "schematics": "./lib/ng-add/collection.json",
  "dependencies": {
    "@angular-devkit/core": "^13.1.2",
    "@angular-devkit/schematics": "^13.1.2",
    "chalk": "^4.1.2",
    "debug": "^4.3.3",
    "fast-glob": "^3.2.11",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/minimist": "^1.2.2",
    "@types/node": "^12.11.1",
    "semantic-release": "^19.0.2",
    "semantic-release-npm-github": "^2.0.0",
    "typescript": "~4.5.2",
    "xo": "^0.48.0"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0",
    "npm": ">=6.0.0"
  },
  "release": {
    "extends": "semantic-release-npm-github",
    "branches": "main"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node"
    ],
    "rules": {
      "unicorn/prefer-module": "off",
      "unicorn/prefer-node-protocol": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off"
    }
  },
  "files": [
    "bin",
    "lib",
    "template"
  ]
}
